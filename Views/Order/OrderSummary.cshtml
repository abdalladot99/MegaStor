@model Order;

@{
     ViewData["Title"] = "Order Summary";
}

<div class="container-fluid">
    <div class="container text-center">
        <h1>Thank you.</h1>
        <p class="lead w-lg-50 mx-auto">Your order has been placed successfully.</p>
        <p class="w-lg-50 mx-auto">We will immediately process your order and it will be delivered in 2 - 5 business days.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="invoice-title">
                        <h4 class="float-end fs-6">
                            Order Invoice
                        </h4>
                        <div class="mb-4">
                            <h2 class="mb-1 text-muted">MegaStor</h2>
                        </div>
                        <div class="text-muted">
                            <p class="mb-1">@Model.ShippingAddress.Address</p>
                            <p class="mb-1"><i class="bi bi-envelope me-1"></i>@Model.ShippingAddress.EmailAddress</p>
                            <p><i class="bi bi-telephone me-1"></i> @Model.ShippingAddress.PhoneNumber</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="fs-5 mb-3">Billed To:</h5>
                                <h5 class="fs-6 mb-2">@Model.BillingAddress.FirstName @Model.BillingAddress.LastName</h5>
                                <p class="mb-1">@Model.BillingAddress.Address</p>
                                <p class="mb-1">@Model.BillingAddress.EmailAddress</p>
                                <p>@Model.BillingAddress.PhoneNumber</p>
                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-sm-6">
                            <div class="text-muted text-sm-end">
                                <div>
                                    <h5 class="fs-6 mb-1">Order Date:</h5>
                                    <p>@Model.OrderDate</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="fs-6 mb-1">Order Status:</h5>
                                    <p>@Model.OrderStatus</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="fs-6 mb-1">Shipping Status:</h5>
                                    <p>@Model.ShippingStatus</p>
                                </div>
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->

                    <div class="py-2">
                        <h5 class="fs-5">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-striped">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th class="text-end">Total Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var orderItem in Model.OrderItems!)
                                        {
                                            <tr>
                                                <td style="white-space: normal;">
                                                    <div>
                                                        <h6 class="mb-1" style="white-space: normal;">@orderItem.Product.Name</h6>
                                                        <p class="text-muted mb-0" style="white-space: normal;">
                                                            @orderItem.Product.Category.Name - @orderItem.Product.SubCategory.CategoryName
                                                        </p>
                                                    </div>
                                                </td>
                                                <td>$ @orderItem.Product.DiscountPrice</td>
                                                <td>@orderItem.Quantity</td>
                                                <td class="text-end">$ @orderItem.TotalPrice</td>
                                            </tr>
                                        }
                                    </tbody>
                            </table>
 
                            <table class="table align-middle table-striped">
                                <tr>
                                    <th scope="row" colspan="3" class="text-end ">Sub Total</th>
                                    <td class="text-end ">$@Model.TotalAmount</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="3" class="border-0 text-end">
                                        Shipping :
                                    </th>
                                    <td class="border-0 text-end">0</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="3" class="border-0 text-end">
                                        Tax:
                                    </th>
                                    <td class="border-0 text-end">0</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="3" class="border-0 text-end">
                                        Discount
                                    </th>
                                    <td class="border-0 text-end">0</td>
                                </tr>
                                <tr>
                                    <th scope="row" colspan="3" class="border-0 text-end">Total</th>
                                    <td class="border-0 text-end"><h4 class="m-0 fw-bold">$@Model.TotalAmount</h4></td>
                                </tr>
                             </table>
                        </div>
                        <div class="d-print-none mt-4">
                            <div class="float-end">
                                <div class="d-flex ">
                                    <a href="javascript:window.print()" class="btn btn-success me-1"><i class="bi bi-printer"></i> Print</a>

                                    <form asp-action="DownloadInvoice" asp-controller="Order" method="post">
                                        <input type="hidden" name="orderId" value="@Model.Id" />
                                        <button type="submit" class="btn My-btn float-end">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end col -->
    </div>
    <div class="my-4">
        <a asp-action="Index" asp-controller="Home" class="btn My-btn">Continue Shopping</a>
    </div>
</div>


