@* Handle Same As Above checkbox *@
<script>
	$(document).ready(function () {
		$('#billing-checkbox').on('change', function () {
			if ($(this).is(':checked')) {

				$('#Shiping-FirstName').val($('#billing-FirstName').val());
				$('#Shiping-LastName').val($('#billing-LastName').val());
				$('#Shiping-EmailAddress').val($('#Billing-EmailAddress').val());
				$('#Shiping-Address').val($('#Billing-Address').val());
				$('#Shiping-City').val($('#Billing-City').val());
				$('#Shiping-Country').val($('#Billing-Country').val());
				$('#Shiping-PostalOrZipCode').val($('#Billing-PostalOrZipCode').val());
				$('#Shiping-PhoneNumber').val($('#Billing-PhoneNumber').val());
				 
				// disable billing fields
				// $('#billing-fullName, #billing-country, #billing-phone, #billing-email, #billing-address, #billing-city, #billing-state, #billing-zip').prop('disabled', true);
			} else {

				$('#Shiping-FirstName,#Shiping-LastName, #Shiping-EmailAddress, #Shiping-Address,#Shiping-City,#Shiping-Country, #Shiping-PostalOrZipCode,#Shiping-PhoneNumber').val('').prop('disabled', false);
			}
		});
	});
</script>