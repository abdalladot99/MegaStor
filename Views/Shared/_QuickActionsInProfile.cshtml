 
<!-- Profile Sidebar -->
<div class="col-lg-3 me-3">
	<!-- Quick Actions -->
    <div class="quick-actions-card card border-0 shadow-sm">
        <div class="card-body p-3">
            <h5 class="card-title mb-3">Quick Actions</h5>

            <div class="d-grid gap-2">

                <!-- Edit Profile -->
                <a asp-controller="AccountServices" asp-action="EditProfile"
                   class="btn btn-primary d-flex align-items-center gap-2"
                   data-bs-toggle="modal" data-bs-target="#editProfileModal">
                    <i class="bi bi-pencil-square"></i>
                    <span>Edit Profile</span>
                </a>

                <!-- Change Password -->
                <a asp-controller="AccountServices" asp-action="ChangePassword"
                   class="btn btn-warning text-white d-flex align-items-center gap-2">
                    <i class="bi bi-shield-lock"></i>
                    <span>Change Password</span>
                </a>

                <!-- Admin Dashboard (Only for Admins) -->
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Dashboard"
                       class="btn btn-dark d-flex align-items-center gap-2">
                        <i class="bi bi-speedometer2"></i>
                        <span>Admin Dashboard</span>
                    </a>
                }
                <!-- Seler Dashboard (Only for Seler) -->
                @if (User.IsInRole("Seller"))
                {
                    <a asp-controller="Seller" asp-action="DashboardSeller"
                       class="btn btn-dark d-flex align-items-center gap-2">
                        <i class="bi bi-speedometer2"></i>
                        <span>Seller Dashboard</span>
                    </a>
                }

                <!-- My Orders -->
                <a asp-controller="Order" asp-action="GetMyOrders"
                   class="btn btn-outline-primary d-flex align-items-center gap-2">
                    <i class="bi bi-bag-check"></i>
                    <span>My Orders</span>
                </a>
                 
                <!-- Logout -->
                <a asp-controller="AccountSettings" asp-action="Logout"
                   class="btn btn-danger d-flex align-items-center gap-2 mt-3">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Logout</span>
                </a>

            </div>

        </div>
    </div>


</div>
 


